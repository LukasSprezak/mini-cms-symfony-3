{% extends 'baseAdmin.html.twig' %}
{% block body %}
<div class="row">
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-primary o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fas fa-folder-open"></i>
                </div>
                {% for row in countPages %}
                <div class="mr-5">{{ 'admin.amount_pages'|trans }}: {{  row['countPages'] }}</div>
                {% endfor %}
            </div>
            <a class="card-footer text-white clearfix small z-1" href="{{ url('page_index') }}">
                <span class="float-left">{{ 'admin.view_details' }}</span>
                <span class="float-right">
              <i class="fas fa-angle-right"></i>
            </span>
            </a>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-warning o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fas fa-fw fa-comments"></i>
                </div>
                {% for row in countPosts %}
                    <div class="mr-5">{{ 'admin.amount_posts'|trans }}: {{  row['countPosts'] }}</div>
                {% endfor %}
            </div>
            <a class="card-footer text-white clearfix small z-1" href="{{ url('post_index') }}">
                <span class="float-left">{{ 'admin.view_details' }}</span>
                <span class="float-right">
              <i class="fas fa-angle-right"></i>
            </span>
            </a>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-success o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fas fa-users"></i>
                </div>
                {% for row in countUsers %}
                    <div class="mr-5">{{ 'admin.amount_users'|trans }}: {{  row['countUsers'] }}</div>
                {% endfor %}
            </div>
            <a class="card-footer text-white clearfix small z-1" href="#">
                <span class="float-left">{{ 'admin.view_details' }}</span>
                <span class="float-right">
              <i class="fas fa-angle-right"></i>
            </span>
            </a>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-danger o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fas fa-camera"></i>
                </div>
                {% for row in countGalleries %}
                    <div class="mr-5">{{ 'admin.amount_galleries'|trans }}: {{  row['countGalleries'] }}</div>
                {% endfor %}
            </div>
            <a class="card-footer text-white clearfix small z-1" href="{{ url('gallery') }}">
                <span class="float-left">{{ 'admin.view_details' }}</span>
                <span class="float-right">
              <i class="fas fa-angle-right"></i>
            </span>
            </a>
        </div>
    </div>
</div>

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        {{ 'admin.info_system'|trans }}</div>
    <div class="card-body">

    </div>
    <div class="card-footer small text-muted">{{ 'admin.last_logged'|trans }}:</div>
</div>
{% endblock %}