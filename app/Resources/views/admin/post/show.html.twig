{% extends 'baseAdmin.html.twig' %}
{% block body %}
<div class="container" style="margin-top: 40px;">

    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            {{ 'post.web_address'|trans }}: {{ post.slug }}</div>
        <div class="card-body">
            <p>{{ 'post.title'|trans }}: {{ post.title }}</p>
            <p>{{ 'post.category'|trans }}: {{ post.category }}</p>
        </div>
        <div class="card-footer small text-muted">{{ 'post.add_date'|trans }} {{ post.publishedDate|date("d-m-Y") }}</div>
    </div>

    <div class="col-lg-12" style="margin-top:20px;">
        <a href="{{ url('post_index') }}" class="btn btn-success">{{ 'menu.return'|trans }}<span class="fas fa-undo ml-2"></span></a>
        <a href="{{ path('post_edit', {'id': post.id}) }}" class="btn btn-xs btn-info ml-2">{{ 'menu.edit'|trans }}<span class="fas fa-edit ml-2"></span></a>

        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
            {{ 'menu.delete'|trans }}
        </button>

        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">{{ 'menu.delete'|trans }}</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        {{ 'menu.want_to_delete'|trans }}
                    </div>
                    <div class="modal-footer">
                        {{ form_start(deleteForm, {"attr": {"class": "d-inline"}}) }}
                        {{ form_widget(deleteForm.submit, {"attr": {"class": "btn btn-xs btn-danger ml-2"}}) }}
                        {{ form_rest(deleteForm) }}
                        {{ form_end(deleteForm) }}
                        <button type="button" class="btn btn-light" data-dismiss="modal">{{ 'menu.cancel'|trans }}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
