{% extends 'baseAdmin.html.twig' %}
{% block body %}
<div class="container" style="margin-top:40px;">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#content" role="tab" aria-controls="home" aria-selected="true">{{ 'menu.content'|trans }}</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#menu" role="tab" aria-controls="profile" aria-selected="false">{{ 'menu.menu'|trans }}</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="contact-tab" data-toggle="tab" href="#seo" role="tab" aria-controls="contact" aria-selected="false">{{ 'menu.seo'|trans }}</a>
        </li>
    </ul>
    {{ form_start(form, {"attr": {"novalidate": "novalidate"}}, {"class": "img-fluid"})}}
    <div class="tab-content" id="myTabContent" style="margin-top:40px;">
        <div class="tab-pane fade show active" id="content" role="tabpanel" aria-labelledby="home-tab">

            <div class="row">
                <div class="col-md-8">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            {{ form_row(form.content) }}
                            {{ form_row(form.publishedDate) }}
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    {{ form_row(form.category, {'label_length': 3, 'wrapper_length': 9, 'attr': {'class': 'select-block'}}) }}

                                    {{ form_row(form.tags, {'label_length': 3, 'wrapper_length': 9, 'attr': {'class': 'select-block'}}) }}
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
        <div class="tab-pane fade" id="menu" role="tabpanel" aria-labelledby="profile-tab">
            <div class="form-group">
                <label class="control-label">{{ 'post.title'|trans }}</label>
                {{ form_widget(form.title) }}
            </div>
            <div class="form-group">
                <label class="control-label">{{ 'post.web_address'|trans }}</label>
                {{ form_widget(form.slug) }}
            </div>
            <div class="form-group">
                <label class="control-label">{{ 'post.author'|trans }}</label>
                {{ form_widget(form.author) }}
            </div>
            <div class="form-group">
                <label class="control-label">{{ 'post.status'|trans }}</label>
                {{ form_widget(form.status) }}
            </div>
            <div class="form-group">
                <label class="control-label">{{ 'post.hidden_sidebar'|trans }}</label>
                {{ form_widget(form.hiddenSidebar) }}
            </div>
                {{ form_row(form.beginningText) }}
            <div class="form-group">
                <label class="control-label">{{ 'post.add_image'|trans }}</label>
                {{ form_widget(form.imageFile) }}
            </div>
        </div>
        <div class="tab-pane fade" id="seo" role="tabpanel" aria-labelledby="contact-tab">
            <div class="form-group">
                <label class="control-label">{{ 'post.keywords'|trans }}</label>
                {{ form_widget(form.keywords) }}
            </div>
            <div class="form-group">
                <label class="control-label">{{ 'post.description'|trans }}</label>
                {{ form_widget(form.description) }}
            </div>
            <div class="form-group">
                <label class="control-label">{{ 'post.alt'|trans }}</label>
                {{ form_widget(form.alt) }}
            </div>
        </div>
        <button type="submit" class="btn btn-primary">
            {{ 'menu.save'|trans }}<i class="fa fa-save ml-2" aria-hidden="true"></i>
        </button>
        <a href="{{ url('post_index') }}" class="btn btn-light">{{ 'menu.cancel'|trans }}<span class="fas fa-undo ml-2"></span></a>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}