{% extends 'baseAdmin.html.twig' %}
{% block body %}
<div class="container">
    <div class="row">
        <div class="col-lg-6" style="margin-bottom: 20px;">
            <h1>{{ 'menu.list_page'|trans }}</h1>
            <a href="{{ url('page_create') }}" class="btn btn-primary">{{ 'menu.add_new_page'|trans }}<span class="fa fa-plus-circle ml-2"></span></a>
        </div>
        <div class="col-lg-12">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th scope="col">{{ knp_pagination_sortable(pages_list, 'page.web_address'|trans, 'page.alias') }}</th>
                    <th scope="col">{{ knp_pagination_sortable(pages_list, 'page.title'|trans, 'page.title') }}</th>
                    <th scope="col">{{ knp_pagination_sortable(pages_list, 'page.date_of_addition'|trans, 'page.createdAt') }}</th>
                    <th>{{ 'menu.option'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for page in pages_list %}
                    <tr>
                        <td>{{ page.alias }}</td>
                        <td>{{ page.title }}</td>
                        <td>{{ page.createdAt|date("d-m-Y") }}</td>
                        <td>
                            <a href="{{ url('page_edit', {'id': page.id}) }}" class="btn btn-xs btn-info">{{ 'menu.edit'|trans }}<span class="fas fa-edit ml-2"></span></a>
                            <a href="{{ url('page_details', {'id': page.id}) }}" class="btn btn-xs btn-success">{{ 'menu.view'|trans }}<span class="far fa-folder-open ml-2"></span></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-lg-12">
            <div class="navigation float-right">
                {{ knp_pagination_render(pages_list) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}